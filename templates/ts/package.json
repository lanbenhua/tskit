{
  "name": "tskit-ts-template",
  "version": "0.0.1",
  "description": "ts starter template",
  "source": "src/index.ts",
  "main": "lib/index.ts",
  "types": "lib/types",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "build": "rm -rf ./lib && rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build:types": "tsc -d --emitDeclarationOnly --declarationDir lib/types",
    "start": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript -w",
    "lint": "tsc --noEmit && eslint --fix --cache --max-warnings 0 --ext .ts,.js ./src && prettier --write ./src"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --cache --max-warnings 0",
      "prettier --write",
      "git add"
    ]
  }
}
